<div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <br><br><br>
          <h1 class="h3 mb-3 font-weight-normal text-center">Se connecter</h1>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control",placeholder:"Email" %>
            </div>

            <div class="field">
              <%= f.label :Mot_de_passe %><br />
              <%= f.password_field :password, autocomplete: "current-password",class:"form-control",placeholder:"Mot de passe" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Log in", class:"btn btn-info" %>
            </div>
          <% end %><br><br>
        </div>
      </div>
    </div>
<%= render "devise/shared/links" %>
