<div id="modal1" class="modalo">
  <div class="modalo-content">
    <span class="close">&times;</span>
    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <br><br><br>
          <h1 class="h3 mb-3 font-weight-normal text-center">S'inscrire</h1>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin mt-3"}) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:"exemple@exemple.com" %>
            </div>

            <div class="field">
              <%= f.label :Mot_de_passe %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder:"Mot de passe" %>
            </div>

            <div class="field">
              <%= f.label :confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder:"Veillez confirmer" %>
            </div><br/>

            <div class="actions">
              <%= f.submit "Sign up", class:"btn btn-lg btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div><br><br>

    <%= render "modal_sing_up" %>
  </div>
</div>

<div id="modal2" class="modalo">
  <div class="modalo-content">
    <div class="container">
      <div class="row">
        <div class="col-md-6 offset-md-3">
          <br><br><br>

          <h2>Se connecter</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control",placeholder:"Email" %>
            </div>

            <div class="field">
              <%= f.label :Mot_de_passe %><br />
              <%= f.password_field :password, autocomplete: "current-password",class:"form-control",placeholder:"Mot de passe" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>

            <div class="actions">
              <%= f.submit "Log in", class:"btn btn-info" %>
            </div>
          <% end %><br><br>
        </div>
      </div>
    </div>

<%= render "modal_log_in" %>
  </div>
</div>