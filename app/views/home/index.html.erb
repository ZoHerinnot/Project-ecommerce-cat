
<div class="marginTop">

 <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
   <ol class="carousel-indicators">
     <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
     <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
     <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
   </ol>
   <div class="carousel-inner" role="listbox">
     <!-- Slide One - Set the background image for this slide in the line below -->
     <div class="carousel-item active">
         <%= image_tag ("cat.jpg"),class:"d-block w-100" %>
       <div class="carousel-caption d-none d-md-block">
         <h2 class="display-4">Bienvenue</h2>
         <p class="lead">Des chats supers mignons en photo</p>
       </div>
     </div>
     <!-- Slide Two - Set the background image for this slide in the line below -->
     <div class="carousel-item">
     	<%= image_tag ("cat2.jpg") ,class:"d-block w-100"%>
       <div class="carousel-caption d-none d-md-block">
         <h2 class="display-4">Inscrire</h2>
         <p class="lead">Inscrivez vous c'est gratuit</p>
       </div>
     </div>
     <!-- Slide Three - Set the background image for this slide in the line below -->
     <div class="carousel-item">
     	<%= image_tag ("cat3.jpg") ,class:"d-block w-100" %>
       <div class="carousel-caption d-none d-md-block">
         <h2 class="display-4">Commander</h2>
         <p class="lead">Remplissez votre panier et acheter</p>
       </div>
     </div>
   </div>
   <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
         <span class="carousel-control-prev-icon" aria-hidden="true"></span>
         <span class="sr-only">Previous</span>
       </a>
   <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
         <span class="carousel-control-next-icon" aria-hidden="true"></span>
         <span class="sr-only">Next</span>
       </a>
 </div>
								<div>
								<marquee direction="right"><%= image_tag ("chatcour.gif")%> </marquee>
								</div>

 <div class="container">
	  		<div class="row" >
					<% @items.each do |item| %>
							<div class="col-lg-2 col-md-6 mb-4">
									<div class="card h-100 edit-card" >
											<%if item.picture.attached?%>
												<%=image_tag item.picture, alt: 'picture' ,class: "card-img-top" %>
											<%else%>
												<%=image_tag item.image_url, alt: 'picture', class: "card-img-top" %>
											<%end%>
											<div class="card-body color-card" >
												<h4 class="card-title">
													<a href="<%=item_path(item.id)%>"><%=item.title%></a>
												</h4>
												<h5><%=item.price%> $</h5>
												<p class="card-text"><%=item.description[0..20]%> ...</p>
                          <a href="<%=carts_path(item.id)%>" data-method="create" class="badge badge-primary">Ajouter au panier</a>
											</div>

									</div>
							</div>
					<%end%>
			</div>
    </div>
  </div>
