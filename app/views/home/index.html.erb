	  		<div class="row">
					<% @items.each do |item| %>
							<div class="col-lg-4 col-md-6 mb-4">
									<div class="card h-100">
											<%if item.picture.attached?%>
												<%=image_tag item.picture, alt: 'picture' ,class: "card-img-top" %>
											<%else%>
												<%=image_tag item.image_url, alt: 'picture', class: "card-img-top" %>
											<%end%>
											<div class="card-body">
												<h4 class="card-title">
													<a href="<%=item_path(item.id)%>"><%=item.title%></a>
													<a href="<%=carts_path(item.id)%>" data-method="create" class="btn btn-primary">Ajouter au panier</a>
												</h4>
												<h5><%=item.price%> $</h5>
												<p class="card-text"><%=item.description[0..40]%> ...</p>
											</div>
											<div class="card-footer">
												<small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
											</div>
									</div>
							</div>
					<%end%>
			</div>
  </div>

